<button id="plugin_pooled_queue_button" class="btn btn-primary">
    <i class="fa fa-upload" aria-hidden="true"></i>
    Pooled Queue
</button>

<div id="plugin_pooled_queue_dialog" class="modal fade" tabindex="-1" role="dialog"
     aria-labelledby="plugin_pooled_queue_label" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times</span>
                </button>
                <h3 class="modal-title" id="plugin_pooled_queue_label">{{ _('Upload from Pooled Queue') }}</h3>
            </div>
            <div class="modal-body">
                <p>Select a file from the pooled queue to upload to this printer&hellip;</p>
                <p class="files no-files hidden">No files are available.</p>
                <div class="files loading">
                    <p>Loading queue&hellip;</p>
                    <div class="spinner-container">
                        <i class="fa fa-spinner fa-spin fa-2x"></i>
                    </div>
                </div>
                <div id="plugin_pooled_queue_files" class="files list hidden">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" data-dismiss="modal" class="btn">Cancel</button>
            </div>
        </div>
    </div>
</div>

<template id="plugin_pooled_queue_item_template">
    <div class="item">
        <span class="id hidden"></span>
        <span class="filename">
            <i class="fa fa-file-o" aria-hidden="true"></i>
        </span>
        <span class="owner">
            <i class="fa fa-user-o" aria-hidden="true"></i>
        </span>
        <span class="date">
            <i class="fa fa-calendar" aria-hidden="true"></i>
        </span>
        <span class="comment">
            <i class="fa fa-sticky-note-o" aria-hidden="true"></i>
        </span>
    </div>
</template>
